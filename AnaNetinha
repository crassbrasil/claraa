<script>
   (function () {
        function redirectBack() {
          window.location.href = "./upback/index.html";
        }
 
        // Salva a URL inicial
        const initialPage = location.pathname;
        
        // Adiciona um estado ao hist√≥rico na primeira carga
        history.pushState({page: 1}, null, location.href);
        
        // S√≥ redireciona quando tentar voltar √† p√°gina anterior
        window.addEventListener("popstate", function(event) {
          // Permite navega√ß√£o interna (hash links)
          if (location.pathname === initialPage && location.hash) {
            return;
          }
          // S√≥ redireciona se tentar sair da p√°gina inicial
          if (location.pathname === initialPage && !event.state) {
            redirectBack();
          }
        });
      })();
</script>

<script>
  function getCurrentParams() {
    const urlSearchParams = new URLSearchParams(window.location.search);
    const result = {};
    paramsToKeep.forEach(param => {
      const value = urlSearchParams.get(param);
      if (value) result[param] = value;
    });
    return result;
  }

  function buildQueryString(params) {
    return Object.entries(params)
      .map(([key, val]) => `${encodeURIComponent(key)}=${encodeURIComponent(val)}`)
      .join("&");
  }

  function updateInternalLinks() {
    const links = document.querySelactorAll("a[href]");
    const currentParams = getCurrentParams();
    if (Object.keys(currentParams).length === 0) return;

    links.forEach(link => {
      const href = link.getAttribute("href");

      // S√≥ aplica em links relativos (ou seja, dentro do site)
      if (href.startsWith("/") || href.startsWith(window.location.origin)) {
        const url = new URL(href, window.location.origin);
        const linkParams = new URLSearchParams(url.search);

        // Adiciona os par√¢metros desejados
        for (const key in currentParams) {
          linkParams.set(key, currentParams[key]);
        }

        url.search = linkParams.toString();
        link.setAttribute("href", url.pathname + url.search);
      }
    });
  }

  // Quando a p√°gina carregar, atualiza os links
  document.addEventListener("DOMContentLoaded", updateInternalLinks);
</script>
